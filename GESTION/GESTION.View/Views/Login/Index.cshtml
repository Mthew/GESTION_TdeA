
@{
    ViewBag.Title = "Index";
    Layout = "";
}
<!doctype html>
<html lang="en" class="fullscreen-bg">
<head>
    <title>CONTRAPUBLIC</title>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=0">
    <!-- VENDOR CSS -->
    <link href="~/Content/Template/vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/Template/vendor/font-awesome/css/font-awesome.min.css" rel="stylesheet" />
    <link href="~/Content/Template/vendor/linearicons/style.css" rel="stylesheet" />
    <!-- MAIN CSS -->
    <link href="~/Content/Template/css/main.css" rel="stylesheet" />
    <!-- FOR DEMO PURPOSES ONLY. You should remove this in your project -->
    <link href="~/Content/Template/css/demo.css" rel="stylesheet" />
    <!-- GOOGLE FONTS -->
    <link href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,600,700" rel="stylesheet">
    <!-- ICONS -->
    <link rel="apple-touch-icon" sizes="76x76" href="~/Content/Template/img/apple-icon.png">
    <link rel="icon" type="image/png" sizes="96x96" href="~/Content/Template/img/favicon.png">
    <link href="~/Content/Site.css" rel="stylesheet" />
</head>
<body>
    <!-- WRAPPER -->
    <div id="wrapper">
        @if (ViewBag.ErrorMessage != null)
        {
            <div class="mb-alert alert alert-danger alert-dismissible" role="alert">
                <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <i class="fa fa-times-circle"></i> @(ViewBag.ErrorMessage)
            </div>
        }
        <div class="vertical-align-wrap">
            <div class="vertical-align-middle">
                <div class="auth-box ">
                    <div class="left">
                        <div class="content">
                            <div class="header">
                                <div class="logo text-center">
                                    <img src="~/Content/Template/img/Logo-small.jpg" alt="Klorofil Logo"></div>
                                <p class="lead">Ingrese su usuario y contraseña</p>
                            </div>
                            @using (Html.BeginForm("Login", "Login", FormMethod.Post, new { id = "formDatosGenerales", @class="form-group" }))
                            {
                                <div class="form-group">
                                    <label for="signin-email" class="control-label sr-only">Email</label>
                                    <input type="text" name="userName" required class="form-control" id="signin-email" placeholder="Nombre de Usuario">
                                </div>
                                <div class="form-group">
                                    <label for="signin-password" class="control-label sr-only">Password</label>
                                    <input type="password" name="password" required class="form-control" id="signin-password" placeholder="Contraseña">
                                </div>
                                <div class="h1">
                                </div>
                                <button type="submit" class="btn btn-primary btn-lg btn-block">INGRESAR</button>
                                <div class="bottom">
                                    <span class="helper-text"><i class="fa fa-lock"></i> <a href="#">Olvido su contraseña?</a></span>
                                </div>
                            }
                        </div>
                    </div>
                    <div class="right">
                        <div class="overlay"></div>
                        <div class="content text">
                            <h1 class="heading">Sistema para la gestion de contratos para las instituciones publicas</h1>
                            <p>by Global Zone</p>
                        </div>
                    </div>
                    <div class="clearfix"></div>
                </div>
            </div>
        </div>
    </div>
    <!-- END WRAPPER -->
</body>
</html>
